<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgProducto"
                android:layout_width="match_parent"
                android:src="@drawable/logo_sandesc"
                android:layout_height="200dp"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/txtNomProd"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:padding="10dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:fontFamily="sans-serif-medium"
                android:layout_marginVertical="10dp"
                android:text="Nombre Prod"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtDescProd"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:fontFamily="sans-serif-medium"
                android:layout_marginVertical="10dp"
                android:text="Descripcion Prod"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtPrecProd"
                android:layout_width="match_parent"
                android:fontFamily="sans-serif-medium"
                android:layout_marginVertical="10dp"
                android:textSize="25dp"
                android:text="$5000.00"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDelProd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Borrar" />

                <TextView
                    android:id="@+id/cantProd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:text="0" />

                <Button
                    android:id="@+id/btnAddProd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AÃ±adir" />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>