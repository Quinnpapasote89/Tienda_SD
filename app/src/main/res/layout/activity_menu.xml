<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_neon"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/imgProveedor"
        android:layout_width="120dp"
        android:layout_height="133dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMenu"
        android:src="@drawable/ic_baseline_shopping_cart_24" />

    <ImageView
        android:id="@+id/imgVentas"
        android:layout_width="120dp"
        android:layout_height="128dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMenu"
        android:src="@drawable/ic_baseline_attach_money_24" />

    <ImageView
        android:id="@+id/imgClientes"
        android:layout_width="120dp"
        android:layout_height="123dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVentas"
        android:src="@drawable/ic_baseline_person_24" />

    <ImageView
        android:id="@+id/imgProductos"
        android:layout_width="120dp"
        android:layout_height="114dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtProveedor"
        android:src="@drawable/ic_baseline_inbox_24" />

    <TextView
        android:id="@+id/txtMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="MENU PRINCIPAL"
        android:textColor="#58e852"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="237dp"
        android:layout_height="186dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="86dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo_sandesc" />

    <TextView
        android:id="@+id/txtVentas"
        android:layout_width="122dp"
        android:layout_height="23dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:text="VENTAS"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgVentas" />

    <TextView
        android:id="@+id/txtProveedor"
        android:layout_width="121dp"
        android:layout_height="23dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="66dp"
        android:text="PROVEEDOR"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProveedor" />

    <TextView
        android:id="@+id/txtCliente"
        android:layout_width="125dp"
        android:layout_height="23dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="9dp"
        android:fontFamily="sans-serif-medium"
        android:text="CLIENTES"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgClientes" />

    <TextView
        android:id="@+id/txtProductos"
        android:layout_width="117dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="sans-serif-medium"
        android:text="PRODUCTOS"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProductos" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMenu" />
</androidx.constraintlayout.widget.ConstraintLayout>