<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_neon"
    tools:context=".ProveedorMenuActivity">


    <Button
        android:id="@+id/btnAltaProveedor"
        android:layout_width="240dp"
        android:layout_height="85dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="29dp"
        android:text="Alta Proveedor"
        android:textSize="20dp"
        android:backgroundTint="#6ee0cf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConsultaOrdeen" />

    <Button
        android:id="@+id/btnConsultaProveedor"
        android:layout_width="240dp"
        android:layout_height="85dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="26dp"
        android:text="Consulta Proveedor"
        android:textSize="20dp"
        android:backgroundTint="#6ee0cf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAltaProveedor" />

    <Button
        android:id="@+id/btnCrearOrden"
        android:layout_width="240dp"
        android:layout_height="85dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="42dp"
        android:text="Gererar Orden"
        android:backgroundTint="#6ee0cf"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMenuProveedor" />

    <Button
        android:id="@+id/btnConsultaOrdeen"
        android:layout_width="240dp"
        android:layout_height="85dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="26dp"
        android:text="Consulta Ordenes"
        android:textSize="20dp"
        android:backgroundTint="#6ee0cf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCrearOrden" />

    <TextView
        android:id="@+id/txtMenuProveedor"
        android:layout_width="230dp"
        android:layout_height="110dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="sans-serif-medium"
        android:text="Menu de Proveedor"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>